<div class="container">
  <%= form_for @user do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control user_form' %>
    <%= f.label :description %><br>
    <%= f.text_area :description, class: 'form-control user_form'  %>
    <%= f.file_field :profile_image %>
    <div align= "right"><%= f.submit "更新する", class: "btn btn-success" %></div>
  <% end %>
</div>