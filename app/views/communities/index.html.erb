<div class="container">
  <%= link_to 'コミュニテイを作成する', new_community_path, class: "btn btn-primary community__index-button" %>
  <h2 class="community__title">コミュニティ一覧</h2>
  <div class="community__index">
    <% @communities.each do |community| %>
      <div class="card community__card" style="width: 18rem;">
        <div class="card-header"><%= community.name %></div>
        <div class="card-body community__card-body">
          <div class="card-text"><%= community.description %></div>
          <%= link_to 'コミュニティ詳細', community_path(community), class: "btn btn-info community__card-button" %>
        </div>
      </div>
    <% end %>
  </div>
  <%= paginate @communities %>
</div>