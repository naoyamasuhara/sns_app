<% @community.errors.full_messages.each do |message| %>
  <%= message %>
<% end %>
<%= form_for @community do |f| %>
  <div class="form_group">
    <%= f.label :コミュニティ名 %>
    <%= f.text_field :name, class: 'form-control community__input-name' %>
  </div>
  <div class="form_group">
    <%= f.label :説明 %>
    <%= f.text_area :description, class: 'form-control community__input-description' %>
  </div>
  <div class="community__input-submit">
    <%= f.submit "作成する", class: "btn btn-success" %>
  </div>
<% end %>