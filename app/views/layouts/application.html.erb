<!DOCTYPE html>
<html>
  <head>
    <title>SnsApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header>
    <div class="container">
      <div class="header-inner">
        <h3 class="header-logo">social ties</h3>
        <div class="header-list">
          <%= link_to "TOP", root_path, class: "btn btn-outline-primary" %>
          <% if user_signed_in? %>
            <a href="/users/<%= current_user.id %>" class="btn btn-outline-secondary" role=button >マイページ</a>
            <a href="/users/<%= current_user.id %>/edit", class="btn btn-outline-success" role=button %>プロフィール編集</a>
            <a href="#" class="btn btn-outline-info" role=button >マイフレンド</a>
            <%= link_to "日記", diaries_path, class: "btn btn-outline-primary" %>
            <a href="#" class="btn btn-outline-warning" role=button >メッセージ</a>
            <a href="#" class="btn btn-outline-info" role=button >マイコミュニティ</a>
            <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "btn btn-outline-warning" %>
          <% else %>
            <%= link_to '新規登録', new_user_registration_path, class: "btn btn-outline-warning" %>
            <%= link_to 'ログイン',new_user_session_path, class: "btn btn-outline-success" %>
          <% end %>
        </div>
      </div>
    </div>
  </header>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <body>
    <%= yield %>
  </body>
</html>